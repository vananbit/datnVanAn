@model WebAppYte.Models.BaiViet

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAd.cshtml";
}

<h2>Chi tiết</h2>

<div>

    <hr />
    <dl class="dl-horizontal">
        <dt>
           Tiêu đề
        </dt>

        <dd>
            @Html.DisplayFor(model => model.tieude)
        </dd>

        <dt>
           Nội dung
        </dt>

        <dd>
            @Html.Raw(@Model.noidung)
        </dd>

        <dt>
           Hình ảnh
        </dt>

        <dd>
            <a class="thumb_cgia">
                <img class="img-responsive " loading="lazy" src="~/images/images/@Model.hinhanh" style="width:150px;height:150px;">
            </a>
        </dd>

        <dt>
           Mô tả
        </dt>

        <dd>
            @Html.DisplayFor(model => model.mota)
        </dd>

        <dt>
          Ngày đăng
        </dt>

        <dd>
            @Model.ngaydang.Value.ToString("dd/MM/yyyy")
        </dd>
        <dt>
           Thể loại
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Loai.tenloai)
        </dd>
        

    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.mabv }) |
    @Html.ActionLink("Back to List", "Index")
</p>
